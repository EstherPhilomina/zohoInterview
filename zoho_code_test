#include <stdio.h>
#include <conio.h>
#include <stdlib.h>
#include <String.h>
int main() {
 char str[]= "WATER";
   int len=strlen(str)/2;
    int middle = len / 2;
 	 int i, j, k, rows;
 	 rows = len;
 	 for (i = 1; i <= rows; i++)   
    {  
        for (j = i; j < rows; j++)  
        {  
            printf(" ");   
        }  
        for (k = 1; k <= i; k++)  
        {  
            printf("%c",str[middle]);
           
        }  
		middle++;
        printf ("\n");   
    }  
    return 0;
}
